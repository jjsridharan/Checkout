<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:layout_height="match_parent">
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText7"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="41dp"
            android:hint="Username"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/status"
            android:prompt="@string/status_prompt"
            android:layout_above="@+id/spinner"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Status"
        android:id="@+id/button9"
        android:onClick="Change"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Return time to cabin"

        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Status"
        android:textSize="25dp"

        android:layout_marginBottom="41dp"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignParentStart="true" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:entries="@array/hour"
        android:layout_above="@+id/button9"
        android:layout_toStartOf="@+id/button9"
        android:layout_marginBottom="67dp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:entries="@array/minute"
        android:layout_alignBaseline="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:entries="@array/meridian"
        android:layout_alignBaseline="@+id/spinner5"
        android:layout_alignBottom="@+id/spinner5"
        android:layout_toEndOf="@+id/button9" />


</RelativeLayout>