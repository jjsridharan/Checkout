<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editText4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:hint="Username"
            android:background="@drawable/edit_text_rounded"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/spinner1"
            android:background="@drawable/edit_text_rounded"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/status"
            android:prompt="@string/status_prompt"
            android:layout_below="@+id/editText4"
            android:layout_alignParentStart="true"
            android:layout_marginTop="64dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Change Status"
        android:id="@+id/button8"
        android:onClick="Change"
        android:layout_marginBottom="65dp"
        android:background="@drawable/roundbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Return time to cabin"
        android:textColor="@color/maroon"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:entries="@array/hour"
        android:background="@drawable/edit_text_rounded"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:layout_marginEnd="13dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:entries="@array/minute"
        android:background="@drawable/edit_text_rounded"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/button8" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:entries="@array/meridian"
        android:background="@drawable/edit_text_rounded"
        android:layout_alignBottom="@+id/spinner3"
        android:layout_toEndOf="@+id/spinner3"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/spinner3" />


</RelativeLayout>